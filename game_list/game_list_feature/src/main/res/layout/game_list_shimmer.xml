<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_list_shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_chainStyle="spread">

        <View
            android:id="@+id/image1"
            android:layout_width="@dimen/shimmer_image_size"
            android:layout_height="@dimen/shimmer_image_size"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:background="@color/grey"
            app:layout_constraintEnd_toStartOf="@+id/image3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="@dimen/shimmer_text_width"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/image1"
            app:layout_constraintStart_toStartOf="@+id/image1"
            app:layout_constraintTop_toBottomOf="@+id/image1" />

        <View
            android:id="@+id/image2"
            android:layout_width="@dimen/shimmer_image_size"
            android:layout_height="@dimen/shimmer_image_size"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:background="@color/grey"
            app:layout_constraintEnd_toStartOf="@+id/image4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="@dimen/shimmer_text_width"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/image2"
            app:layout_constraintStart_toStartOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@+id/image2" />

        <View
            android:id="@+id/image3"
            android:layout_width="@dimen/shimmer_image_size"
            android:layout_height="@dimen/shimmer_image_size"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="@dimen/shimmer_text_width"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/image3"
            app:layout_constraintStart_toStartOf="@+id/image3"
            app:layout_constraintTop_toBottomOf="@+id/image3" />

        <View
            android:id="@+id/image4"
            android:layout_width="@dimen/shimmer_image_size"
            android:layout_height="@dimen/shimmer_image_size"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_extra_large"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image2"
            app:layout_constraintTop_toBottomOf="@id/text3" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="@dimen/shimmer_text_width"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="@+id/image4"
            app:layout_constraintStart_toStartOf="@+id/image4"
            app:layout_constraintTop_toBottomOf="@+id/image4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>